#include <iostream>
#include <vector>
#include <string>
using namespace std;
int main() {
	int N;
	cin >> N;
	for (int i = 1; i <= N; i++) {
		string str = "";
		cin >> str;
		int num = 0;
		int score = 0;
		for (int j = 0; j < str.size(); j++) {
			if (str[j] == 'O') {
				num++;
				score += num;
			}
			else {
				num = 0;
			}
		}
		cout << score << endl;
	}
}
