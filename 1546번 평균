#include <iostream>
#include <vector>
using namespace std;
int main() {
	int N;
	cin >> N;
	cout << fixed;
	cout.precision(4);
	int max_score = 0;
	vector<double>num;
	for (int i = 1; i <= N; i++) {
		int k;
		cin >> k;
		num.push_back((double)k);
		if (max_score < k) {
			max_score = k;
		}
	}
	double sum = 0;
	for (int i = 0; i < num.size(); i++) {
		num[i] = num[i] / (double)max_score * (double)100;
		sum += num[i];
	}
	cout << sum / (double)N;
}
